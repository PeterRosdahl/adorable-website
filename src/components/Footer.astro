---

<footer class="bg-gray-900 text-gray-300">
  <!-- Main Footer -->
  <div class="container-custom py-12">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <!-- About -->
      <div>
        <h4 class="text-xl font-bold text-white mb-4">Adorable</h4>
        <p class="text-gray-400">
          AI-transformation och digital marknadsföring sedan 2016.
        </p>
      </div>

      <!-- Quick Links -->
      <div>
        <h4 class="text-xl font-bold text-white mb-4">Länkar</h4>
        <ul class="space-y-2">
          <li><a href="/" class="hover:text-white transition-colors">Hem</a></li>
          <li><a href="/om" class="hover:text-white transition-colors">Om</a></li>
          <li><a href="/tjanster" class="hover:text-white transition-colors">Tjänster</a></li>
          <li><a href="/kontakt" class="hover:text-white transition-colors">Kontakt</a></li>
          <li><a href="https://pr.substack.com" target="_blank" rel="noopener" class="hover:text-white transition-colors">Nyhetsbrev →</a></li>
        </ul>
      </div>

      <!-- Social Links -->
      <div>
        <h4 class="text-xl font-bold text-white mb-4">Följ mig</h4>
        <div class="flex gap-4">
          {socialLinks.map(({ name, href, icon }) => (
            <a
              href={href}
              target="_blank"
              rel="noopener noreferrer"
              class="w-10 h-10 flex items-center justify-center rounded-lg bg-gray-800 hover:bg-gray-700 transition-colors"
              aria-label={name}
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path d={icon} />
              </svg>
            </a>
          ))}
        </div>
      </div>
    </div>
  </div>

  <!-- Bottom Bar -->
  <div class="border-t border-gray-800">
    <div class="container-custom py-6 text-center text-sm text-gray-500">
      <p>&copy; {currentYear} Adorable. Alla rättigheter förbehållna.</p>
    </div>
  </div>
</footer>
