<style>
	main {
		background: #fff;
		min-height: 100vh;
	}

	.container {
		max-width: 900px;
		margin: 0 auto;
		padding: 0 2rem;
	}

	.hero {
		padding: 8rem 0 4rem;
		background: linear-gradient(180deg, #fffbf0 0%, #fff 100%);
	}

	.hero-title {
		font-size: clamp(2rem, 5vw, 3rem);
		font-weight: 400;
		margin: 0 0 2rem;
		line-height: 1.3;
		color: #000;
	}

	.hero-intro {
		font-size: clamp(1.1rem, 2vw, 1.25rem);
		line-height: 1.7;
		color: #000;
	}

	.section {
		padding: 6rem 0;
		border-top: 1px solid #e5e5e5;
	}

	.section-title {
		font-size: clamp(1.5rem, 3vw, 2rem);
		font-weight: 700;
		margin: 0 0 2rem;
		color: #000;
	}

	.text {
		font-size: clamp(1rem, 2vw, 1.125rem);
		line-height: 1.7;
		color: #333;
		margin-bottom: 1.5rem;
	}

	.text:last-child {
		margin-bottom: 0;
	}

	/* Team section */
	.team-grid {
		display: grid;
		gap: 3rem;
	}

	@media (min-width: 600px) {
		.team-grid {
			grid-template-columns: repeat(2, 1fr);
			gap: 4rem;
		}
	}

	.team-member {
		text-align: left;
	}

	.member-icon {
		width: 48px;
		height: 48px;
		margin-bottom: 1rem;
		color: #000;
	}

	.member-icon svg {
		width: 100%;
		height: 100%;
	}

	.team-member h3 {
		font-size: 1.5rem;
		font-weight: 600;
		margin: 0 0 0.25rem;
		color: #000;
	}

	.member-role {
		font-size: 1rem;
		color: #666;
		margin: 0 0 1rem;
	}

	.member-bio {
		font-size: 1rem;
		line-height: 1.7;
		color: #333;
		margin: 0 0 1rem;
	}

	.member-social {
		display: flex;
		gap: 0.75rem;
	}

	.member-social a {
		display: flex;
		align-items: center;
		justify-content: center;
		width: 32px;
		height: 32px;
		color: #666;
		transition: color 0.2s;
	}

	.member-social a:hover {
		color: #000;
	}

	.member-social svg {
		width: 20px;
		height: 20px;
	}

	.newsletter {
		background: #fafafa;
	}

	.newsletter-intro {
		font-size: clamp(1rem, 2vw, 1.125rem);
		line-height: 1.7;
		margin-bottom: 2rem;
		color: #333;
	}

	.newsletter-button {
		display: inline-block;
		padding: 0.75rem 1.5rem;
		background: #000;
		color: #fff;
		text-decoration: none;
		font-weight: 500;
		border-radius: 4px;
		transition: opacity 0.2s;
	}

	.newsletter-button:hover {
		opacity: 0.8;
	}

	@media (max-width: 768px) {
		.hero {
			padding: 4rem 0 2rem;
		}

		.section {
			padding: 4rem 0;
		}
	}
</style>
