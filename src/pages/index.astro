---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Adorable – AI-transformation och digital marknadsföring">
	<main>
		<!-- Hero -->
		<section class="hero">
			<div class="hero-content">
				<h1 class="hero-title">Adorable</h1>
				<p class="hero-subtitle">Paid social och AI-transformation</p>
			</div>
		</section>

		<!-- Vad jag gör -->
		<section class="section">
			<div class="container">
				<h2 class="section-title">Vad jag gör</h2>
				
				<div class="services-grid">
					<div class="service-card">
						<h3>Paid Social</h3>
						<p>Meta Ads, LinkedIn Ads, Google Ads. Strategi, uppsättning, optimering. Fokus på resultat som går att mäta.</p>
					</div>

					<div class="service-card">
						<h3>AI-transformation</h3>
						<p>Workshops, utbildning, implementering. Hjälper organisationer att börja använda AI på riktigt.</p>
					</div>
				</div>
			</div>
		</section>

		<!-- Kontakt -->
		<section class="section section-contact">
			<div class="container">
				<h2 class="section-title">Kontakt</h2>
				<div class="contact-info">
					<p class="contact-name">Peter Rosdahl</p>
					<p><a href="mailto:peter@adorable.se" class="contact-link">peter@adorable.se</a></p>
					<p><a href="tel:+46708235787" class="contact-link">+46 70 823 57 87</a></p>
				</div>
			</div>
		</section>
	</main>
</Layout>

<style>
	main {
		background: #fff;
		min-height: 100vh;
	}

	.container {
		max-width: 1200px;
		margin: 0 auto;
		padding: 0 2rem;
	}

	/* Hero */
	.hero {
		min-height: 90vh;
		display: flex;
		align-items: center;
		justify-content: center;
		background: #fff;
	}

	.hero-content {
		text-align: center;
		max-width: 900px;
		padding: 4rem 2rem;
	}

	.hero-title {
		font-size: clamp(4rem, 12vw, 10rem);
		font-weight: 800;
		margin: 0;
		line-height: 0.9;
		letter-spacing: -0.04em;
		color: #000;
	}

	.hero-subtitle {
		font-size: clamp(1.2rem, 3vw, 1.8rem);
		font-weight: 300;
		margin: 2rem 0 1rem;
		color: #000;
	}

	.hero-description {
		font-size: clamp(1rem, 2vw, 1.2rem);
		color: #666;
		max-width: 600px;
		margin: 0 auto;
	}

	.hero-bg {
		display: none;
	}

	/* Section Styles */
	.section {
		padding: 6rem 0;
		border-top: 1px solid #000;
	}

	.section-title {
		font-size: clamp(2.5rem, 6vw, 4.5rem);
		font-weight: 800;
		margin: 0 0 2rem;
		letter-spacing: -0.03em;
		line-height: 1.1;
		color: #000;
	}

	.section-intro {
		font-size: clamp(1.1rem, 2.5vw, 1.4rem);
		line-height: 1.6;
		margin-bottom: 4rem;
		max-width: 800px;
		color: #000;
	}

	/* Services Grid */
	.services-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
		gap: 2rem;
		margin-top: 4rem;
	}

	.service-card {
		padding: 2rem;
		border: 1px solid #000;
	}

	.service-card h3 {
		font-size: 1.3rem;
		font-weight: 700;
		margin: 0 0 1rem;
		color: #000;
	}

	.service-card p {
		font-size: 1rem;
		line-height: 1.6;
		margin: 0;
		color: #000;
	}

	/* Clients */
	.clients-text {
		font-size: clamp(1.1rem, 2.5vw, 1.4rem);
		line-height: 1.6;
		max-width: 700px;
		color: #000;
	}

	/* Contact */
	.section-contact {
		background: #000;
		color: #fff;
	}

	.section-contact .section-title {
		color: #fff;
	}

	.contact-info {
		max-width: 500px;
		font-size: 1.2rem;
	}

	.contact-name {
		font-size: 1.8rem;
		font-weight: 700;
		margin-bottom: 1rem;
	}

	.contact-link {
		color: #fff;
		text-decoration: none;
		border-bottom: 1px solid #fff;
	}

	.contact-link:hover {
		opacity: 0.7;
	}

	/* Responsive */
	@media (max-width: 768px) {
		.services-grid {
			grid-template-columns: 1fr;
		}

		.section {
			padding: 4rem 0;
		}
	}
</style>
