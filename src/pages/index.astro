---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { getContent } from '../utils/content';

const content = getContent('home.md');
---

<BaseLayout
  title={content.title}
  description={content.description}
>
  <Header />

  <main>
    <!-- Hero Section -->
    <section class="section bg-gradient-to-br from-teal-50 via-white to-indigo-50">
      <div class="container-custom">
        <div class="max-w-4xl mx-auto text-center">
          <h1 class="mb-6 bg-gradient-to-r from-teal-600 to-indigo-600 bg-clip-text text-transparent">
            {content.hero_title}
          </h1>
          <p class="text-xl text-gray-600 mb-8 max-w-2xl mx-auto">
            {content.hero_text}
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a href="/kontakt" class="btn btn-primary text-lg">
              Kom igång
            </a>
            <a href="/tjanster" class="btn btn-secondary text-lg">
              Utforska tjänster
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- AI Transformation -->
    <section class="section">
      <div class="container-custom">
        <div class="max-w-4xl mx-auto">
          <h2 class="mb-6 text-center">{content.ai_section.title}</h2>
          <p class="text-xl text-gray-600 mb-12 text-center max-w-3xl mx-auto">
            {content.ai_section.intro}
          </p>

          <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
            {content.ai_section.services.map((service: any, idx: number) => {
              const gradients = [
                'from-teal-50 to-cyan-50',
                'from-indigo-50 to-purple-50',
                'from-pink-50 to-rose-50',
                'from-amber-50 to-orange-50'
              ];
              return (
                <div class={`p-8 rounded-2xl bg-gradient-to-br ${gradients[idx % 4]}`}>
                  <h3 class="mb-3">{service.name}</h3>
                  <p class="text-gray-600">{service.description}</p>
                </div>
              );
            })}
          </div>
        </div>
      </div>
    </section>

    <!-- Paid Social -->
    <section class="section bg-gray-50">
      <div class="container-custom">
        <div class="max-w-4xl mx-auto">
          <h2 class="mb-6 text-center">{content.paid_social_section.title}</h2>
          <p class="text-xl text-gray-600 mb-12 text-center max-w-3xl mx-auto">
            {content.paid_social_section.intro}
          </p>

          <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            {content.paid_social_section.services.map((service: any) => (
              <div class="bg-white p-6 rounded-xl shadow-sm">
                <h3 class="text-xl font-semibold mb-3">{service.name}</h3>
                <p class="text-gray-600">{service.description}</p>
              </div>
            ))}
          </div>
        </div>
      </div>
    </section>

    <!-- Kunder -->
    <section class="section">
      <div class="container-custom">
        <div class="max-w-3xl mx-auto text-center">
          <h2 class="mb-6">Kunder</h2>
          <p class="text-xl text-gray-600">
            {content.clients_text}
          </p>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="section bg-gradient-to-r from-teal-600 to-indigo-600 text-white">
      <div class="container-custom">
        <div class="max-w-3xl mx-auto text-center">
          <h2 class="mb-6 text-white">Redo att ta nästa steg?</h2>
          <p class="text-xl mb-8 text-teal-50">
            Låt oss prata om hur AI och digital marknadsföring kan accelerera er tillväxt.
          </p>
          <a href="/kontakt" class="btn bg-white text-teal-600 hover:bg-gray-100">
            Kontakta mig
          </a>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</BaseLayout>
