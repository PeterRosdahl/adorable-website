---
import Layout from '../layouts/Layout.astro';

const industries = [
  { name: 'Bank & Finans', slug: 'bank-finans', description: 'Paid social och AI-rådgivning för finansiella tjänster. Regulatoriska krav möter digital innovation.', type: 'paid-social' },
  { name: 'Byråer', slug: 'byraer', description: 'White-label paid social och AI-expertis för alla typer av byråer. Reklam, design, kommunikation, PR och PA.', type: 'paid-social' },
  { name: 'Byggbranschen', slug: 'byggbranschen', description: 'AI-rådgivning för byggföretag. Effektivisera projektledning, dokumentation och resursplanering.', type: 'ai' },
  { name: 'Fastighetsbolag', slug: 'fastighetsbolag', description: 'Digital marknadsföring för fastighetsutveckling och förvaltning. Från projektsäljning till hyresgäster.', type: 'paid-social' },
  { name: 'FMCG', slug: 'fmcg', description: 'Performance marketing för snabbrörliga konsumentvaror. Brand building möter direct response.', type: 'paid-social' },
  { name: 'Försäkring', slug: 'forsakring', description: 'Performance marketing för försäkringsbolag. Komplext erbjudande, tydlig kommunikation.', type: 'paid-social' },
  { name: 'Organisationer', slug: 'organisationer', description: 'Digital kommunikation för NGOs, intresseorganisationer, fackförbund och arbetsgivarorganisationer.', type: 'paid-social' },
  { name: 'Tillväxtbolag', slug: 'tillvaxtbolag', description: 'Skalbar marknadsföring för växande företag. Effektiv budgetanvändning och snabb tillväxt.', type: 'paid-social' },
  { name: 'Tillverkningsindustri', slug: 'tillverkningsindustri', description: 'B2B-marknadsföring och AI-optimering för tillverkande företag. Från leads till produktion.', type: 'paid-social' },
  { name: 'Utbildning', slug: 'utbildning', description: 'AI-rådgivning för skolor och utbildningsföretag. Personaliserat lärande och smartare administration.', type: 'ai' },
];
---

<Layout 
  title="Branscher - Adorable arbetar med alla vertikaler"
  description="Från bank och finans till FMCG, startups och försäkring. Adorable har hjälpt företag i nästan alla branscher med paid social och AI-rådgivning."
>
  <main>
    <section class="hero">
      <div class="container">
        <h1 class="hero-title">Branscher vi arbetar med</h1>
        <p class="hero-intro">
          Nästan alla vertikaler har Adorable arbetat med. Från traditionell tillverkningsindustri till snabbväxande tech-startups.
        </p>
      </div>
    </section>

    <section class="section">
      <div class="container">
        <div class="industries-grid">
          {industries.map((industry) => (
            <a href={`/branscher/${industry.slug}`} class="industry-card">
              <div class="card-header">
                <h2>{industry.name}</h2>
                <span class={`badge badge-${industry.type}`}>
                  {industry.type === 'ai' ? 'AI' : 'Paid Social'}
                </span>
              </div>
              <p>{industry.description}</p>
              <span class="arrow">→</span>
            </a>
          ))}
        </div>
      </div>
    </section>

  </main>
</Layout>

<style>
  main {
    background: #fff;
    min-height: 100vh;
  }

  .container {
    max-width: 760px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .hero {
    padding: 8rem 0 4rem;
  }

  .hero-title {
    font-size: clamp(2rem, 5vw, 3rem);
    font-weight: 400;
    margin: 0 0 1rem;
    line-height: 1.3;
    color: #000;
  }

  .hero-intro {
    font-size: clamp(1.1rem, 2vw, 1.25rem);
    line-height: 1.7;
    color: #000;
  }

  .section {
    padding: 4rem 0 6rem;
  }

  .industries-grid {
    display: grid;
    gap: 2rem;
  }

  .industry-card {
    padding: 2rem;
    border: 1px solid #e5e5e5;
    text-decoration: none;
    color: inherit;
    transition: border-color 0.2s, transform 0.2s;
    position: relative;
  }

  .industry-card:hover {
    border-color: #000;
    transform: translateX(4px);
  }

  .card-header {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 0.75rem;
  }

  .industry-card h2 {
    font-size: 1.5rem;
    font-weight: 600;
    margin: 0;
    color: #000;
  }

  .badge {
    display: inline-block;
    padding: 0.25rem 0.5rem;
    font-size: 0.7rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    border-radius: 3px;
  }

  .badge-ai {
    background: #e8f5e9;
    color: #2e7d32;
  }

  .badge-paid-social {
    background: #e3f2fd;
    color: #1565c0;
  }

  .industry-card p {
    font-size: 1rem;
    line-height: 1.6;
    color: #666;
    margin: 0;
  }

  .arrow {
    position: absolute;
    right: 2rem;
    top: 2rem;
    font-size: 1.5rem;
    opacity: 0.3;
    transition: opacity 0.2s;
  }

  .industry-card:hover .arrow {
    opacity: 1;
  }

  @media (max-width: 768px) {
    .hero {
      padding: 4rem 0 2rem;
    }

    .section {
      padding: 3rem 0 4rem;
    }

    .card-header {
      flex-wrap: wrap;
    }
  }
</style>
