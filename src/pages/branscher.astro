---
import Layout from '../layouts/Layout.astro';
import Footer from '../components/Footer.astro';

const industries = [
  { name: 'Bank & Finans', slug: 'bank-finans', description: 'Paid social och AI-transformation för finansiella tjänster. Regulatoriska krav möter digital innovation.' },
  { name: 'Tillverkningsindustri', slug: 'tillverkningsindustri', description: 'B2B-marknadsföring och AI-optimering för tillverkande företag. Från leads till produktion.' },
  { name: 'FMCG', slug: 'fmcg', description: 'Performance marketing för snabbrörliga konsumentvaror. Brand building möter direct response.' },
  { name: 'Startups & Scaleups', slug: 'startups-scaleups', description: 'Skalbar marknadsföring för växande företag. Effektiv budgetanvändning och snabb tillväxt.' },
  { name: 'Kreativa Byråer', slug: 'kreativa-byraer', description: 'White-label paid social och AI-expertis för byråer. Stärk er tjänsteportfölj.' },
  { name: 'Fastighetsbolag', slug: 'fastighetsbolag', description: 'Digital marknadsföring för fastighetsutveckling och förvaltning. Från projektsäljning till hyresgäster.' },
  { name: 'Fackförbund', slug: 'fackforbund', description: 'Medlemsrekrytering och engagement genom digital marknadsföring och automation.' },
  { name: 'Försäkring', slug: 'forsakring', description: 'Performance marketing för försäkringsbolag. Komplext erbjudande, tydlig kommunikation.' },
];
---

<Layout 
  title="Branscher - Adorable arbetar med alla vertikaler"
  description="Från bank och finans till FMCG, startups och försäkring. Adorable har hjälpt företag i nästan alla branscher med paid social och AI-transformation."
>
  <main>
    <section class="hero">
      <div class="container">
        <h1 class="hero-title">Branscher vi arbetar med</h1>
        <p class="hero-intro">
          Nästan alla vertikaler har Adorable arbetat med. Från traditionell tillverkningsindustri till snabbväxande tech-startups.
        </p>
      </div>
    </section>

    <section class="section">
      <div class="container">
        <div class="industries-grid">
          {industries.map((industry) => (
            <a href={`/branscher/${industry.slug}`} class="industry-card">
              <h2>{industry.name}</h2>
              <p>{industry.description}</p>
              <span class="arrow">→</span>
            </a>
          ))}
        </div>
      </div>
    </section>

    <Footer />
  </main>
</Layout>

<style>
  main {
    background: #fff;
    min-height: 100vh;
  }

  .container {
    max-width: 760px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .hero {
    padding: 8rem 0 4rem;
  }

  .hero-title {
    font-size: clamp(2rem, 5vw, 3rem);
    font-weight: 400;
    margin: 0 0 1rem;
    line-height: 1.3;
    color: #000;
  }

  .hero-intro {
    font-size: clamp(1.1rem, 2vw, 1.25rem);
    line-height: 1.7;
    color: #000;
  }

  .section {
    padding: 4rem 0 6rem;
  }

  .industries-grid {
    display: grid;
    gap: 2rem;
  }

  .industry-card {
    padding: 2rem;
    border: 1px solid #e5e5e5;
    text-decoration: none;
    color: inherit;
    transition: border-color 0.2s, transform 0.2s;
    position: relative;
  }

  .industry-card:hover {
    border-color: #000;
    transform: translateX(4px);
  }

  .industry-card h2 {
    font-size: 1.5rem;
    font-weight: 600;
    margin: 0 0 0.75rem;
    color: #000;
  }

  .industry-card p {
    font-size: 1rem;
    line-height: 1.6;
    color: #666;
    margin: 0;
  }

  .arrow {
    position: absolute;
    right: 2rem;
    top: 2rem;
    font-size: 1.5rem;
    opacity: 0.3;
    transition: opacity 0.2s;
  }

  .industry-card:hover .arrow {
    opacity: 1;
  }

  @media (max-width: 768px) {
    .hero {
      padding: 4rem 0 2rem;
    }

    .section {
      padding: 3rem 0 4rem;
    }
  }
</style>
