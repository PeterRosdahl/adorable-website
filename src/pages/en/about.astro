<style>
	main {
		background: #fff;
		min-height: 100vh;
	}

	.container {
		max-width: 900px;
		margin: 0 auto;
		padding: 0 2rem;
	}

	.hero {
		padding: 8rem 0 4rem;
	}

	.hero-title {
		font-size: clamp(2rem, 5vw, 3rem);
		font-weight: 400;
		margin: 0 0 2rem;
		line-height: 1.3;
		color: #000;
	}

	.hero-intro {
		font-size: clamp(1.1rem, 2vw, 1.25rem);
		line-height: 1.7;
		color: #000;
	}

	.section {
		padding: 6rem 0;
		border-top: 1px solid #e5e5e5;
	}

	.section-title {
		font-size: clamp(1.5rem, 3vw, 2rem);
		font-weight: 700;
		margin: 0 0 2rem;
		color: #000;
	}

	.text {
		font-size: clamp(1rem, 2vw, 1.125rem);
		line-height: 1.7;
		color: #333;
		margin-bottom: 1.5rem;
	}

	.text:last-child {
		margin-bottom: 0;
	}

	/* Team section */
	.team-section {
		background: #fafafa;
	}

	.team-grid {
		display: grid;
		gap: 2rem;
	}

	@media (min-width: 600px) {
		.team-grid {
			grid-template-columns: repeat(2, 1fr);
		}
	}

	.team-member {
		background: #fff;
		border: 1px solid #e5e5e5;
		border-radius: 8px;
		padding: 2rem;
	}

	.member-info h3 {
		font-size: 1.5rem;
		font-weight: 600;
		margin: 0 0 0.25rem;
	}

	.member-role {
		font-size: 1rem;
		color: #666;
		margin: 0 0 1rem;
	}

	.member-desc {
		font-size: 1rem;
		line-height: 1.6;
		color: #333;
		margin: 0 0 1.5rem;
	}

	.member-social {
		display: flex;
		gap: 0.75rem;
	}

	.member-social a {
		display: flex;
		align-items: center;
		justify-content: center;
		width: 36px;
		height: 36px;
		background: #f5f5f5;
		border-radius: 6px;
		color: #333;
		transition: background 0.2s, color 0.2s;
	}

	.member-social a:hover {
		background: #000;
		color: #fff;
	}

	.social-icon {
		width: 18px;
		height: 18px;
	}

	/* Newsletter */
	.newsletter {
		background: #fff;
	}

	.newsletter-intro {
		font-size: clamp(1rem, 2vw, 1.125rem);
		line-height: 1.7;
		margin-bottom: 2rem;
		color: #333;
	}

	.newsletter-button {
		display: inline-block;
		padding: 0.75rem 1.5rem;
		background: #000;
		color: #fff;
		text-decoration: none;
		font-weight: 500;
		border-radius: 4px;
		transition: opacity 0.2s;
	}

	.newsletter-button:hover {
		opacity: 0.8;
	}

	@media (max-width: 768px) {
		.hero {
			padding: 4rem 0 2rem;
		}

		.section {
			padding: 4rem 0;
		}
	}
</style>
