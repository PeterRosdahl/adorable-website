---
import Layout from '../layouts/Layout.astro';
import Footer from '../components/Footer.astro';

// Artikel-metadata
const articles = [
  {
    title: '5 sätt AI kan automatisera ditt marknadsföringsarbete',
    slug: '5-satt-ai-kan-automatisera-marknadsföring',
    category: 'AI-transformation',
    date: '2026-01-25',
    excerpt: 'AI är inte längre framtiden – det är nutiden. Här är fem konkreta sätt du kan börja automatisera repetitivt arbete redan idag.'
  },
  {
    title: 'Prompt Engineering för marknadsförare: En praktisk guide',
    slug: 'prompt-engineering-for-marknadsforsare',
    category: 'AI-transformation',
    date: '2026-01-25',
    excerpt: 'Bättre prompts ger bättre resultat. Lär dig skriva instruktioner som får AI att leverera vad du faktiskt behöver.'
  },
  {
    title: 'AI-policy: Vad ditt företag behöver tänka på',
    slug: 'ai-policy-vad-foretag-behover-tanka-pa',
    category: 'AI-transformation',
    date: '2026-01-25',
    excerpt: 'Ett ramverk för ansvarsfull AI-användning. Ge medarbetare trygghet att experimentera utan att skapa risker.'
  },
  {
    title: '5 Meta Ads-misstag som kostar dig pengar',
    slug: '5-meta-ads-misstag',
    category: 'Paid Social',
    date: '2026-01-25',
    excerpt: 'Vanliga fel som slösar bort din budget. Och hur du fixar dem.'
  },
  {
    title: 'Så optimerar du ROAS utan att sänka volym',
    slug: 'optimera-roas-utan-att-sanka-volym',
    category: 'Paid Social',
    date: '2026-01-25',
    excerpt: 'Högre avkastning behöver inte betyda färre kunder. Här är hur du hittar balansen.'
  },
];
---

<Layout 
  title="Artiklar om AI-transformation och Paid Social | Adorable"
  description="Praktiska guider och insikter om AI-transformation, Meta Ads, performance marketing och datadriven marknadsföring."
>
  <main>
    <section class="hero">
      <div class="container">
        <h1 class="hero-title">Artiklar</h1>
        <p class="hero-intro">
          Praktiska guider och insikter om AI-transformation, paid social och performance marketing.
        </p>
      </div>
    </section>

    <section class="section">
      <div class="container">
        <div class="articles-list">
          {articles.map((article) => (
            <article class="article-card">
              <div class="article-meta">
                <span class="category">{article.category}</span>
                <time>{new Date(article.date).toLocaleDateString('sv-SE', { year: 'numeric', month: 'long', day: 'numeric' })}</time>
              </div>
              <h2><a href={`/artiklar/${article.slug}`}>{article.title}</a></h2>
              <p class="excerpt">{article.excerpt}</p>
              <a href={`/artiklar/${article.slug}`} class="read-more">Läs mer →</a>
            </article>
          ))}
        </div>
      </div>
    </section>

    <Footer />
  </main>
</Layout>

<style>
  main {
    background: #fff;
    min-height: 100vh;
  }

  .container {
    max-width: 760px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .hero {
    padding: 8rem 0 4rem;
  }

  .hero-title {
    font-size: clamp(2rem, 5vw, 3rem);
    font-weight: 400;
    margin: 0 0 1rem;
    line-height: 1.3;
    color: #000;
  }

  .hero-intro {
    font-size: clamp(1.1rem, 2vw, 1.25rem);
    line-height: 1.7;
    color: #000;
  }

  .section {
    padding: 4rem 0 6rem;
  }

  .articles-list {
    display: flex;
    flex-direction: column;
    gap: 3rem;
  }

  .article-card {
    padding-bottom: 3rem;
    border-bottom: 1px solid #e5e5e5;
  }

  .article-card:last-child {
    border-bottom: none;
    padding-bottom: 0;
  }

  .article-meta {
    display: flex;
    gap: 1rem;
    margin-bottom: 0.75rem;
    font-size: 0.9rem;
    color: #666;
  }

  .category {
    font-weight: 500;
    color: #000;
  }

  .article-card h2 {
    font-size: clamp(1.5rem, 3vw, 1.75rem);
    font-weight: 600;
    margin: 0 0 0.75rem;
  }

  .article-card h2 a {
    color: #000;
    text-decoration: none;
    transition: opacity 0.2s;
  }

  .article-card h2 a:hover {
    opacity: 0.7;
  }

  .excerpt {
    font-size: 1.05rem;
    line-height: 1.6;
    color: #666;
    margin: 0 0 1rem;
  }

  .read-more {
    color: #000;
    text-decoration: none;
    font-weight: 500;
    border-bottom: 1px solid #000;
    transition: opacity 0.2s;
  }

  .read-more:hover {
    opacity: 0.7;
  }

  @media (max-width: 768px) {
    .hero {
      padding: 4rem 0 2rem;
    }

    .section {
      padding: 3rem 0 4rem;
    }
  }
</style>
