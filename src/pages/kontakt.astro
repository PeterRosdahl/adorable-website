---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<BaseLayout
  title="Kontakt – Adorable"
  description="Hör av dig så diskuterar vi hur jag kan hjälpa er med AI-transformation och digital marknadsföring."
>
  <Header />

  <main>
    <!-- Hero -->
    <section class="section bg-gradient-to-br from-indigo-50 via-white to-teal-50">
      <div class="container-custom">
        <div class="max-w-4xl mx-auto text-center">
          <h1 class="mb-6">Låt oss prata</h1>
          <p class="text-xl text-gray-600">
            Hör av dig så diskuterar vi hur jag kan hjälpa er att nå era mål.
          </p>
        </div>
      </div>
    </section>

    <!-- Contact Section -->
    <section class="section">
      <div class="container-custom">
        <div class="max-w-2xl mx-auto">
          <div class="space-y-8">
            <div>
              <h2 class="text-3xl font-bold mb-6">Kontaktuppgifter</h2>
              
              <div class="space-y-4">
                <div class="flex items-start gap-4">
                  <div class="w-12 h-12 bg-teal-100 rounded-lg flex items-center justify-center flex-shrink-0">
                    <svg class="w-6 h-6 text-teal-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                    </svg>
                  </div>
                  <div>
                    <h3 class="font-semibold text-gray-900">E-post</h3>
                    <a href="mailto:peter@adorable.se" class="text-teal-600 hover:text-teal-700">
                      peter@adorable.se
                    </a>
                  </div>
                </div>

                <div class="flex items-start gap-4">
                  <div class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center flex-shrink-0">
                    <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                    </svg>
                  </div>
                  <div>
                    <h3 class="font-semibold text-gray-900">Telefon</h3>
                    <a href="tel:+46708235787" class="text-teal-600 hover:text-teal-700">
                      +46 70 823 57 87
                    </a>
                  </div>
                </div>

                <div class="flex items-start gap-4">
                  <div class="w-12 h-12 bg-indigo-100 rounded-lg flex items-center justify-center flex-shrink-0">
                    <svg class="w-6 h-6 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                    </svg>
                  </div>
                  <div>
                    <h3 class="font-semibold text-gray-900">Plats</h3>
                    <p class="text-gray-600">Stockholm, Sverige</p>
                  </div>
                </div>
              </div>
            </div>

            <div class="border-t border-gray-200 pt-8">
              <h3 class="font-semibold text-gray-900 mb-4">Följ mig</h3>
              <div class="flex gap-4">
                <a 
                  href="https://x.com/PeterRosdahl" 
                  target="_blank"
                  class="w-12 h-12 flex items-center justify-center rounded-lg bg-gray-900 text-white hover:bg-gray-800 transition-colors"
                  aria-label="X (Twitter)"
                >
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
                  </svg>
                </a>
                
                <a 
                  href="https://www.linkedin.com/in/peterrosdahl"
                  target="_blank"
                  class="w-12 h-12 flex items-center justify-center rounded-lg bg-blue-600 text-white hover:bg-blue-700 transition-colors"
                  aria-label="LinkedIn"
                >
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                  </svg>
                </a>
                
                <a 
                  href="https://www.threads.net/@PeterRosdahl"
                  target="_blank"
                  class="w-12 h-12 flex items-center justify-center rounded-lg bg-gradient-to-r from-purple-500 to-pink-500 text-white hover:from-purple-600 hover:to-pink-600 transition-colors"
                  aria-label="Threads"
                >
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 0C5.373 0 0 5.373 0 12s5.373 12 12 12 12-5.373 12-12S18.627 0 12 0zm0 22C6.477 22 2 17.523 2 12S6.477 2 12 2s10 4.477 10 10-4.477 10-10 10z"/>
                  </svg>
                </a>
              </div>
            </div>

            <div class="bg-gradient-to-br from-teal-50 to-cyan-50 rounded-2xl p-6">
              <h3 class="font-semibold text-gray-900 mb-2">Vill du veta mer?</h3>
              <p class="text-gray-700 mb-4">
                Prenumerera på mitt nyhetsbrev för att få de senaste insikterna om AI och digital marknadsföring.
              </p>
              <a href="/#newsletter" class="text-teal-600 hover:text-teal-700 font-medium">
                Prenumerera här →
              </a>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</BaseLayout>
