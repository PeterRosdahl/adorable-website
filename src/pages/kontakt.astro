		font-weight: 400;
		margin: 0 0 2rem;
		line-height: 1.3;
		color: #000;
	}

	.hero-intro {
		font-size: clamp(1.1rem, 2vw, 1.25rem);
		line-height: 1.7;
		color: #000;
	}

	.section {
		padding: 4rem 0;
		border-top: 1px solid #e5e5e5;
	}

	.section-title {
		font-size: clamp(1.5rem, 3vw, 1.75rem);
		font-weight: 600;
		margin: 0 0 2rem;
		color: #000;
	}

	/* Form styles */
	.contact-form {
		display: flex;
		flex-direction: column;
		gap: 1.5rem;
	}

	.form-group {
		display: flex;
		flex-direction: column;
		gap: 0.5rem;
	}

	.form-group label {
		font-weight: 500;
		color: #000;
	}

	.optional {
		font-weight: 400;
		color: #666;
	}

	.form-group input,
	.form-group select,
	.form-group textarea {
		padding: 0.875rem 1rem;
		border: 1px solid #ddd;
		border-radius: 6px;
		font-size: 1rem;
		font-family: inherit;
		transition: border-color 0.2s;
		background: #fff;
	}

	.form-group input:focus,
	.form-group select:focus,
	.form-group textarea:focus {
		outline: none;
		border-color: #000;
	}

	.form-group textarea {
		resize: vertical;
		min-height: 120px;
	}

	.submit-button {
		padding: 1rem 2rem;
		background: #000;
		color: #fff;
		border: none;
		border-radius: 6px;
		font-size: 1rem;
		font-weight: 600;
		font-family: inherit;
		cursor: pointer;
		transition: opacity 0.2s;
		align-self: flex-start;
	}

	.submit-button:hover {
		opacity: 0.85;
	}

	/* Contact methods */
	.contact-methods {
		display: grid;
		gap: 2.5rem;
	}

	@media (min-width: 600px) {
		.contact-methods {
			grid-template-columns: repeat(3, 1fr);
		}
	}

	.method h3 {
		font-size: 1.125rem;
		font-weight: 600;
		margin: 0 0 0.5rem;
		color: #000;
	}

	.method p {
		font-size: 1rem;
		margin: 0;
		color: #333;
	}

	.method-note {
		font-size: 0.9rem !important;
		color: #666 !important;
		margin-top: 0.5rem !important;
	}

	.method a {
		color: #000;
		text-decoration: none;
		border-bottom: 1px solid #000;
		transition: opacity 0.2s;
	}

	.method a:hover {
